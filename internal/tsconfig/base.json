{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base",
  "compilerOptions": {
    // 设置为true以启用项目引用，用于构建大型项目。,
    "composite": false,
    // 指定编译后的 JavaScript 版本为最新的 ECMAScript 特性。,
    "target": "ESNext",

    // 强制模块检测，忽略文件中的模块指示。,
    "moduleDetection": "force",
    // 启用对装饰器的实验性支持。,
    "experimentalDecorators": true,

    // 解析非相对模块名的基目录。,
    "baseUrl": ".",
    // 指定生成哪个模块系统代码。,
    "module": "ESNext",

    // 选择模块解析策略，Node.js 风格解析。,
    "moduleResolution": "node",
    // 允许从 JSON 文件导入模块。,
    "resolveJsonModule": true,

    // 启用所有严格的类型检查选项。,
    "strict": true,
    // 在严格的 null 检查模式下，null 和 undefined 值不包含在任何类型中除了它们各自的类型。,
    "strictNullChecks": true,
    // 防止 switch 语句落空。,
    "noFallthroughCasesInSwitch": true,
    // 在表达式和声明上有隐含的 'any' 类型时报错。,
    "noImplicitAny": true,
    // 确保派生类的方法显式地声明覆盖基类方法。,
    "noImplicitOverride": true,
    // 当 'this' 表达式的值为 'any' 类型的时候，生成一个错误。
    "noImplicitThis": true,
    // 在索引访问时包括 'undefined' 在内的更严格的检查。,
    "noUncheckedIndexedAccess": true,
    // 检测未使用的局部变量。,
    "noUnusedLocals": true,
    // 检测未使用的函数参数。,
    "noUnusedParameters": true,

    // 将代码和源映射合并到一个文件中，便于调试。,
    "inlineSources": false,
    // 不生成输出文件。,
    "noEmit": true,
    // 从输出文件中删除所有注释。,
    "removeComments": true,
    // 不生成源映射文件。,
    "sourceMap": false,
    // 允许从没有默认导出的模块中默认导入。,
    "allowSyntheticDefaultImports": true,
    // 通过为所有导入创建命名空间对象，实现 CommonJS 和 ES 模块之间的互操作性。,
    "esModuleInterop": true,
    // 禁止对同一文件的不一致的大小写引用。,
    "forceConsistentCasingInFileNames": true,
    // 每个文件作为单独的模块进行转换。,
    "isolatedModules": true,
    // 保持原始的 ES6 模块语法。,
    "verbatimModuleSyntax": true,
    // 跳过库文件的类型检查。,
    "skipLibCheck": true,
    // 在监视模式下不清除控制台输出。,
    "preserveWatchOutput": true
  },
  "exclude": ["**/node_modules/**", "**/dist/**", "**/.turbo/**"]
}
